{
  "name": "peerprep",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "build": "pnpm --filter frontend build",
    "start": "pnpm --filter frontend start",
    "lint": "pnpm --filter frontend lint",
    "lint:fix": "pnpm --filter frontend lint:fix",
    "format": "pnpm --filter frontend format",
    "format:check": "pnpm --filter frontend format:check",
    "typecheck": "pnpm --filter frontend typecheck",
    "prepare": "husky"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "cd frontend && eslint --fix",
      "prettier --write"
    ],
    "frontend/**/*.{json,md,css,scss,mdx}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "eslint": "^9.11.0",
    "@eslint/js": "^9.11.0",
    "prettier": "^3.3.3",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.8",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
